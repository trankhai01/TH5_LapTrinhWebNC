<%- include('../layouts/header') %>

<h2 class="title">Danh sách sản phẩm</h2>
<div class="add-product-container">
    <a href="/products/addProduct" class="add-product-btn">Thêm sản phẩm</a>
</div>
<div class="product-list">
    <% products.forEach(product => { %>
        <div class="product-item">
            <img src="<%= product.image %>" class="product-img">
            <h3 class="product-name"><%= product.name %></h3>
            <p class="product-price"><%= product.price.toLocaleString() %> VNĐ</p>
            <p class="product-description"><%= product.description %></p>
            <a href="/products/<%= product._id %>" class="detail-btn">Xem chi tiết</a>
            <form action="/cart/add/<%= product._id %>" method="POST">
                <button type="submit" class="add-cart-btn">Thêm vào giỏ hàng</button>
            </form>
        </div>
    <% }) %>
</div>

<%- include('../layouts/footer') %>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        color: #333;
    }

    .title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 28px;
        color: #007bff;
    }

    .product-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
        justify-content: center;
    }

    .product-item {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 15px;
        text-align: center;
        transition: transform 0.2s ease-in-out;
    }

    .product-item:hover {
        transform: scale(1.05);
    }

    .product-img {
        width: 100%;
        max-width: 200px;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .product-name {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .product-price {
        font-size: 18px;
        color: #28a745;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .product-description {
        font-size: 14px;
        color: #666;
        margin-bottom: 10px;
    }

    .detail-btn, .add-cart-btn {
        display: inline-block;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }

    .detail-btn {
        background-color: #007bff;
        color: white;
        margin-right: 5px;
    }

    .add-cart-btn {
        background-color: #28a745;
        color: white;
        border: none;
        cursor: pointer;
    }

    .detail-btn:hover {
        background-color: #0056b3;
    }

    .add-cart-btn:hover {
        background-color: #218838;
    }

    .add-product-container {
    text-align: right;
    padding: 10px 20px;
    }

    .add-product-btn {
        background-color: #28a745;
        color: white;
        padding: 10px 15px;
        text-decoration: none;
        font-weight: bold;
        border-radius: 5px;
        display: inline-block;
        transition: 0.3s;
    }

    .add-product-btn:hover {
        background-color: #218838;
    }

    .product-img {
    width: 200px; /* Chiều rộng cố định */
    height: 200px; /* Chiều cao cố định */
    object-fit: cover; /* Cắt ảnh để lấp đầy vùng hiển thị */
    border-radius: 8px; /* Bo góc ảnh */
}


</style>
